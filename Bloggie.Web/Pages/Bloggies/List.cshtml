@page
@model Bloggie.Web.Pages.Bloggies.ListModel
@{
}
<h1 class="mb-3"> List of BlogPosts</h1>
<div class="container">
    <div class="row">
        <div class="col-md-1 offset-md-5">
        <a href="/Bloggies/Add" class="btn btn-primary">Add_New_Employee</a>
        </div>
    </div>
</div>
@if (Model.BlogPosts !=null && Model.BlogPosts.Any())
{
    <table class="table">
        <thead>
            <tr>
            <th>ID</th>
            <th>Heading</th>
            <th>PageTitle</th>
            <th>Content</th>
            <th>ShortDescription</th>
            <th>FeaturedImageUrl</th>
            <th>UrlHandle</th>
            </tr>
        </thead>
        @foreach(var employee in Model.BlogPosts)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Heading</td>
                <td>@employee.PageTitle</td>
                <td>@employee.Content</td>
                <td>@employee.ShortDescription</td>
                <td>@employee.FeaturedImageUrl</td>
                <td>@employee.UrlHandle</td>
                <td>
                    <a href="/Bloggies/Edit/@employee.Id" class="btn btn-dark">Edit</a>
                  @* <a href="/Bloggies/Edit/Delete/@employee.Id" class="btn btn-dark">Delete</a>
                    <button type="submit" class="btn btn-" asp-page-handler="Delete">Delete</button>
                    <a href="/Bloggies/Edit/@employee.Id" class="btn btn-dark" asp-page-handler="Delete">Delete</a>*@


                </td>
            </tr>
        }

    </table>
    
}
else
{
    <p> No Employees found</p>
}