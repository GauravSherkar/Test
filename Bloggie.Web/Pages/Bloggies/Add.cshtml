@page
@model Bloggie.Web.Pages.Bloggies.AddModel
@{
}

@{
    var message = ViewData["Message"]?.ToString();
}
<form method="post">
    <h1 class="mb-3">Add New Bloggie</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    <div class="mb-3">
        <label class="form-lable">Heading</label>
        <input type="text" class="form-control" asp-for="AddBlogSpotRequest.Heading" />

    </div>
    <div class="mb-3">
        <label class="form-lable">PageTitle</label>
        <input type="Pagetitle" class="form-control" asp-for="AddBlogSpotRequest.PageTitle" />

    </div>
    <div class="mb-3">
        <label class="form-lable">Content</label>
        <input type="text" class="form-control" asp-for="AddBlogSpotRequest.Content" />

    </div>
    <div class="mb-3">
        <label class="form-lable">ShortDescription</label>
        <input type="date" class="form-control" asp-for="AddBlogSpotRequest.ShortDescription" />

    </div>
    <div class="mb-3">
        <label class="form-lable">FeaturedImageUrl</label>
        <input type="text" class="form-control" asp-for="AddBlogSpotRequest.FeaturedImageUrl" />
    </div>
    <div class="mb-3">
        <label class="form-lable">UrlHandle</label>
        <input type="text" class="form-control" asp-for="AddBlogSpotRequest.UrlHandle" />
    </div>
    <div class="mb-3">
        <label class="form-lable">PublishedDate</label>
        <input type="date" class="form-control" asp-for="AddBlogSpotRequest.PublishedDate" />
    </div>
    <div class="mb-3">
        <label class="form-lable">Author</label>
        <input type="text" class="form-control" asp-for="AddBlogSpotRequest.Author" />
    </div>
    <div class="mb-3">
        <label class="form-lable">Visible</label>
        <input type="Bool" class="form-control" asp-for="AddBlogSpotRequest.Visible" />
    </div>
    <div class="mb-3">
        <a href="\bloggies\List" class="btn btn-primary">Back To List</a>
        <button type="Submit" class="btn btn-primary">Save</button>
    </div>
</form>
